# .env.example
# Copy this file to .env and set values for production

# CORS allowed origins (comma-separated, e.g. http://localhost,http://yourdomain.com)
ALLOWED_ORIGINS=*

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Max file size in bytes (default 10MB)
MAX_FILE_SIZE=10485760

# Max image size in bytes (default 100KB)
MAX_IMAGE_SIZE=100000

# Wikipedia base URL
WIKIPEDIA_BASE_URL=https://en.wikipedia.org
